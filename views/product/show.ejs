<% layout('layout/boilerplate.ejs') %>

<div class="row">
    <div class="col-lg-6 col-12 d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <img src="<%=product.image.url%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <h5 class="card-title"><%=product.price%></h5>
              <p class="card-text"><%=product.desc%></p>
              <a href="/login" class="btn btn-success">Buy</a>

              <form action="/products/<%=product._id%>?_method=DELETE" method="POST">

                <button   class="btn btn-dark   offset-2 mb-3">delete</button>
            
            </form>
            </div>
          </div>
    </div>
    <div class="col-lg-6 col-12">
        <h1>All Review</h1>
        <form action="/products/<%=product._id%>/add" method="post">
          <!-- <input type="range" min="0" max="5" name="rating"><br> -->
          <fieldset class="starability-basic">
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <textarea cols="30" rows="3" name="comment" required></textarea><br>
          <button class="btn btn-primary">Submit</button>
        </form>
        <div>
          <%for(let review of product.reviews){%>
            <div class="card mt-3" style="width: 20vw;">
              <p><h5 class="card-title"><%=review.username%></h5></p>

              <!-- <p class="card-header"><%=review.rating%></p> -->
              <p class="starability-result " data-rating="<%=review.rating%>">
                Rated: 3 stars
              </p>
              <p class="card-body"><%=review.comment%></p>
              <button class="btn btn-danger ">delete</button>
              
            </div>
          <%}%>
        </div>
    </div>
</div>